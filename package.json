{
  "name": "@flyingrobots/bijou-workspace",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "rm -rf packages/bijou/dist packages/bijou-node/dist packages/bijou-tui/dist packages/bijou/*.tsbuildinfo packages/bijou-node/*.tsbuildinfo packages/bijou-tui/*.tsbuildinfo",
    "build": "tsc -b",
    "build:watch": "tsc -b -w",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "lint": "npm run lint --workspaces",
    "version": "bash scripts/version.sh"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18"
  }
}
